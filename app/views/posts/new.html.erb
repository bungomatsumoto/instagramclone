<%= form_with(model: @post, local: true) do |form| %>
  <div class="post_content">
    <%= form.label :content %><br>
    <%= form.text_area :content %>
  </div>
  <div class="post_image">
    <%= form.label :image %><br>
    <%= form.file_field :image %>
  </div>
  <p><%= form.submit %></p>
<% end %>
