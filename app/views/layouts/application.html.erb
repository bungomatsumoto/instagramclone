<!DOCTYPE html>
<html>
  <head>
    <title>Tacostagram</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Rock+Salt&display=swap" rel="stylesheet">

  </head>

  <body>
    <div class="body_wrapper">

      <header id="header_container">
        <div class="title_container">
            <%= image_tag 'camera.png', class:'tacostagram_icon' %><span id="header_title">Tacostagram</span>

        </div>
        <div id="login_container">
        <% if logged_in? %>
          <span class="login_entrance">
            <%= link_to "プロフィール", user_path(current_user.id) %>
          </span>
          <span class="login_entrance">
            <%= link_to "ログアウト", session_path(current_user.id), method: :delete %>
          </span>
        <% else %>
          <span class="login_entrance">
            <%= link_to "登録する", new_user_path %>
          </span>
          <span class="login_entrance">
              <%= link_to "ログイン", new_session_path %>
          </span>
          <% end %>
          <p id="camera_rights"><a target="_blank" href="https://icons8.com/icons/set/camera">Camera</a> icon by <a target="_blank" href="https://icons8.com">Icons8</a></p>
        </div>

      </header>

      <main>
        <div class="main_container">

        <%= yield %>
        </div>

      <footer>
        <div class="footer_container">
          <p><small>(C)2019 TACOSTAGRAM. All Rights Reserved.</small></p>
        </div>
      </footer>

    </div>
  </body>
</html>
